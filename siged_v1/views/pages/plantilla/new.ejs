<div id="new" v-cloak class="">
  <div class=""  v-if="!cloudSuccess">
    <ajax-form  action="newPlantilla" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm($event)" :handle-parsing="handleParsingForm" style="margin-top: 60px;">
     <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group navbar-fixed-top" style=" background-color: #eceeef; margin-top:2px; height:45px;">
       <ajax-button type="submit" :syncing="syncing" class="btn btn-success" id="save">Guardar</ajax-button>
       <a class="salir btn btn-danger" name= "salir" id="salir">Salir</a>
       <a class="salir btn btn-info" v-if="registro" name= "pdf" id="pdf" @Click="HtmlToPdf()">Exportar PDF</a>
     </div>
     <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="row"> 
        <div class="col-md-6 form-group">
          <div class="table-striped">
            <table class="table">
              <thead>
                <tr>
                  <th><span style="color: blue">Creado por:</span></th>
                  <th>{{ me.fullName }}</th>                  
                  <th><span style="color: blue">Editado por:</span></th>
                  <th>{{ me.fullName }}</th>                  
                </tr>
              </thead>
            </table>
          </div>        
        </div>
      </div>
        <div class="row table-striped">
          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">                  
          <table class="table">
            <thead>
              <tr>
                <th>Nombre del documento:</th>
                <th>Asignar a la dependencia:</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group">
                  <input type="text" name="titulo" id="titulo" v-model.trim="formData.titulo" class="form-control" title="Nombre del documento" :class="[formErrors.titulo ? 'is-invalid' : '']">
                     <div class="invalid-feedback" v-if="formErrors.titulo">Por favor ingrese un nombre para el documento.</div>
                    </div>
                </td>
                <td>
                   <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group">
                  <select name="dependencia" v-model.trim="formData.dependencia" id="dependencia" class="form-control" :class="[formErrors.dependencia ? 'is-invalid' : '']">
                    <option v-for ="resp in response" v-bind:value="resp.id">{{resp.nombre}}</option>
                  </select>
                  <div class="invalid-feedback" v-if="formErrors.dependencia">Por favor seleccione una dependencia.</div>
                </div>
                </td>
              </tr>
            </tbody>
          </table>
          </div>
        </div>
    
     <div class="row">  
       <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
         <div style="width: 100%; margin-top: 0.25rem; font-size: 80%; color: #dc3545;">*La formulaci√≥n del documento es requerida</div>    
       </div> 
     </div>
      <div class="row">        
    	 <div id="txtEditor"></div>              
      </div>             
    </div>
  </ajax-form>

</div>
</div>
